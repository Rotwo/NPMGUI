<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:NPMGUI.ViewModels"
             xmlns:dtos="clr-namespace:NPMGUI.DTOs"
             x:DataType="vm:PackagesPageViewModel"
             x:Class="NPMGUI.Views.PackagesPageView"
             x:CompileBindings="True">
    <Design.DataContext>
        <vm:PackagesPageViewModel></vm:PackagesPageViewModel>
    </Design.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="24" Spacing="24">
        <StackPanel HorizontalAlignment="Stretch">
            <Label FontSize="24" FontWeight="SemiBold">Dependencies</Label>
            
            <ItemsControl ItemsSource="{Binding DependenciesList}" Margin="0 10 0 0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="dtos:DependencyItem">
                        <Border CornerRadius="8" HorizontalAlignment="Stretch" Background="{DynamicResource SecondaryBackground}" Padding="10" Margin="0 0 0 10">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Version}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Stretch">
            <Label FontSize="24" FontWeight="SemiBold">Dev Dependencies</Label>
            
            <ItemsControl ItemsSource="{Binding DevDependenciesList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="dtos:DependencyItem">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Version}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        
    </StackPanel>
    </ScrollViewer>
    
    
    

</UserControl>
